{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "routes/**/*.js",
    "controllers/**/*.js",
    "middleware/**/*.js",
    "services/**/*.js",
    "config/**/*.js",
    "lib/**/*.js",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "coverage",
    "scripts/**/*",
    "RAG-System/**/*",
    "uploads/**/*"
  ]
}